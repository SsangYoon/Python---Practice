#If-Statement를 사용해보자 
Current_State = {"Health" : "s", "Money" : None, "Card" : True}

def StateView(Current_State):
    if Current_State["Health"] == "Good" :              # Indentation(들여쓰기)에 주의하자 
        print ("Health : " + Current_State["Health"])
        
    elif Current_State["Health"] == "Bad" :
        print ("Health : " + Current_State["Health"])
        
    else :
#         pass                # 아무것도 하지않는 다는 의미 // 그렇다고해서 아래 라인이 실행되지 않는 것은 아니
#         print ("Error")     # else레이블 아래에 아무것도 없으면 
    
StateView(Current_State)